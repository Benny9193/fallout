{
  "name": "fallout-web-app",
  "version": "0.1.0",
  "description": "A modern React application demonstrating best practices with TypeScript, React Query, Zustand, and more. Built with React 18, Vite, and modern web technologies.",
  "type": "module",
  "private": true,
  "author": "Fallout Web App Team",
  "license": "MIT",
  "keywords": [
    "react",
    "typescript",
    "vite",
    "react-query",
    "zustand",
    "react-router",
    "axios",
    "web-application",
    "modern-web-development",
    "spa",
    "frontend"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:build": "rm -rf dist",
    "validate": "npm run type-check && npm run lint",
    "prebuild": "npm run type-check"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.62.11",
    "axios": "^1.7.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.15.0",
    "vite": "^6.0.1"
  }
}
